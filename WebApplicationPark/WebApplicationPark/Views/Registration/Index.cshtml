@model Employees
@{
    ViewData["Title"] = "Регистрация";
}

<div class="text-center">
    <h1>Войти на сайт</h1>
</div>

<form method="post" asp-asp-controller="Registration" asp-action="Check1">
    @Html.AntiForgeryToken()
    <label asp-for="FirstName">Имя</label>
    <input asp-for="FirstName"/>
    <span class="text-danger">@ViewData["FirstNameError"]</span>
    <span asp-validation-for="FirstName"></span>

    <label asp-for="LastName">Фамилия</label>
    <input asp-for="LastName"/>
    <span asp-validation-for="LastName"></span>

    <label asp-for="DateOfBirth">Дата рождения</label>
    <input asp-for="DateOfBirth" type="date" />
    <span asp-asp-validation-for="DateOfBirth"></span>

    <label asp-for="Login">Логин</label>
    <input asp-for="Login"/>
    <span asp-validation-for="Login"></span>

    <label asp-for="Password">Пароль</label>
    <input asp-for="Password"/>
    <span asp-validation-for="Password"></span>

   <label asp-for="Position.Position">Позиция</label>
    <select asp-for="Position.Position" asp-items="ViewBag.Positions" class="form-control">
           <option value="">Выберите позицию</option>
       </select>
   <span asp-validation-for="Position.Position"></span>

    <input type="submit" value="Зарегистрироваться"/>
</form>
